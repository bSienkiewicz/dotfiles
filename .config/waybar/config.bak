{
  "layer": "top",
  "position": "top",
  "height": 34,
  "margin": "10 10 0 10",
  "spacing": 5,
  "modules-left": [
    "custom/sep",
    "hyprland/workspaces",
   // "custom/bluetooth_devices",
    "custom/sep",
    "temperature",
    "custom/sep",
    "pulseaudio",
    "custom/sep"
    // "custom/powermenu"
  ],
  "modules-center": [
    "hyprland/window" 
 ],
  "modules-right": [
    "custom/sep",
    "custom/weather",
    "custom/sep",
    "clock",
    "custom/sep"
//    "tray",
//    "custom/sep",
 ],
  "custom/sep": {
    //    "format": "──"
    "format": "",
    "rotate": 90
  },
  "custom/powermenu": {
    "on-click": "~/.config/wofi/scripts/wofipowermenu.py",
    "format": "",
    "tooltip": false
  },
"custom/weather": {
    "format": "{}",
    "tooltip": true,
    "interval": 3600,
//    "exec": "~/.config/waybar/custom_modules/waybar-wttr.py",
    "exec": "wttrbar --location Zielona+Gora",
    "return-type": "json"
},
  "custom/bluetooth_devices": {
    "exec": "$HOME/.config/waybar/custom_modules/bluetooth.sh",
    "return-type": "json",
    "format": "{}",
    "justify": "center",
    "rotate": 90,
    "interval": 5,
    "on-click": "blueman-manager"
  },
  "hyprland/workspaces": {
    "format": "{icon}",
    "on-click": "activate",
    "on-scroll-up": "hyprctl dispatch workspace e-1",
    "on-scroll-down": "hyprctl dispatch workspace e+1",
    "format-icons": {
      "active": "",
      "urgent": "",
      "default": ""
    }
  },
  "hyprland/window": {
    "format": "{title}",
    "icon": true,
    "icon-size": 18,
    "max-length": 40,
    "rewrite":{
        "": "❤",
	"^$": "No window"
    }
  },
  "clock": {
    "tooltip": true,
    "format": "{:%H:%M}",
    "tooltip-format": "{:%Y-%m-%d}",
    "on-click": "kitty -e calcure"
  },
  "tray": {
    "icon-size": 18,
    "show-passive-items": "true"
  },
  "temperature": {
    "rotate": 0,
    "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
    "critical-threshold": 80,
    "format": "{icon} {temperatureC}°C",
    "format-icons": [
      "",
      "",
      ""
    ]
  },
  "pulseaudio": {
    "rotate": 0,
    "format": "{icon} {volume}%",
    "format-bluetooth": "{icon} {volume}%",
    "format-muted": "MUTE ",
    "format-icons": {
      "headphones": "",
      "handsfree": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": [
        "",
        ""
      ]
    },
    "scroll-step": 5,
    "on-click": "pavucontrol",
    "on-click-right": "pactl set-source-mute @DEFAULT_SOURCE@ toggle"
  }
}
